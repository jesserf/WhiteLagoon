@model IEnumerable<WhiteLagoon.Domain.Entities.Villa>

<div class="w-100 card border-0 p-4">
    <div class="card-header bg-success bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h1 class="text-white py-2">Villas</h1>
            </div>
        </div>
    </div>
    <div class="card-body border p-4">
        <div class="row pb-3">
            <div class="col-6 offset-6 text-end">
                <a asp-asp-controller="Villa" asp-action="Create" class="btn btn-secondary">
                    <i class="bi bi-plus-square"></i>  Create New Villa
                </a>
            </div>
        </div>
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Occupancy</th>
                    <th>Square Feet</th>
                    <th>Price</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var ojb in Model)
                {
                    <tr>
                        <td>@ojb.Name</td>
                        <td>@ojb.Description</td>
                        <td>@ojb.Occupancy</td>
                        <td>@ojb.Sqft</td>
                        <td>@ojb.Price</td>
                        <td>
                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="Villa" asp-action="Update" asp-route-villaID="@ojb.Id" class="btn btn-success mx-2">
                                    <i class="bi bi-pencil-square"></i> Edit
                                </a>
                                <a asp-controller="Villa" asp-action="Delete" asp-route-villaID="@ojb.Id" class="btn btn-danger mx-2">
                                    <i class="bi bi-trash"></i> Delete
                                </a>
                            </div>"
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

